{
  "name": "@ipfs-shipyard/release-please-ipfs-plugin",
  "version": "0.0.1",
  "description": "A release-please helper plugin for IPFS repos. Initially created for IPFS-desktop",
  "author": "Russell Dempsey <1173416+SgtPooki@users.noreply.github.com>",
  "license": "Apache-2.0 OR MIT",
  "homepage": "https://github.com/ipfs-shipyard/release-please-ipfs-plugin#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ipfs-shipyard/release-please-ipfs-plugin.git"
  },
  "bugs": {
    "url": "https://github.com/ipfs-shipyard/release-please-ipfs-plugin/issues"
  },
  "keywords": [
    "ci",
    "ipfs",
    "plugin",
    "release-please"
  ],
  "main": "src/index.js",
  "types": "dist/src/index.d.ts",
  "typesVersions": {
    "*": {
      "*": [
        "*",
        "dist/*",
        "dist/src/*"
      ],
      "src/*": [
        "*",
        "dist/*",
        "dist/src/*"
      ]
    }
  },
  "files": [
    "src",
    "dist"
  ],
  "eslintConfig": {
    "extends": "ipfs",
    "parserOptions": {
      "project": true
    }
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "preset": "conventionalcommits",
          "releaseRules": [
            {
              "breaking": true,
              "release": "patch"
            },
            {
              "revert": true,
              "release": "patch"
            },
            {
              "type": "feat",
              "release": "minor"
            },
            {
              "type": "fix",
              "release": "patch"
            },
            {
              "type": "docs",
              "release": "patch"
            },
            {
              "type": "test",
              "release": "patch"
            },
            {
              "type": "deps",
              "release": "patch"
            },
            {
              "scope": "no-release",
              "release": false
            }
          ]
        }
      ],
      [
        "@semantic-release/release-notes-generator",
        {
          "preset": "conventionalcommits",
          "presetConfig": {
            "types": [
              {
                "type": "feat",
                "section": "Features"
              },
              {
                "type": "fix",
                "section": "Bug Fixes"
              },
              {
                "type": "chore",
                "section": "Trivial Changes"
              },
              {
                "type": "docs",
                "section": "Documentation"
              },
              {
                "type": "deps",
                "section": "Dependencies"
              },
              {
                "type": "test",
                "section": "Tests"
              }
            ]
          }
        }
      ],
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/github",
      "@semantic-release/git"
    ]
  },
  "scripts": {
    "clean": "aegir clean",
    "lint": "aegir lint",
    "build": "aegir build",
    "release": "aegir release"
  },
  "devDependencies": {
    "aegir": "^41.0.4",
    "typescript": "^5.2.2"
  },
  "peerDependencies": {
    "release-please": "^16.0.0"
  },
  "browser": {
    "fs": false,
    "path": false,
    "url": false
  },
  "exports": {
    ".": {
      "types": "./dist/src/index.d.ts",
      "import": "./dist/src/index.esm.js",
      "require": "./dist/src/index.js",
      "default": "./dist/src/index.js",
      "node": "./dist/src/index.js"
    }
  },
  "type": "commonjs",
  "publishConfig": {
    "access": "public"
  },
  "private": false
}
